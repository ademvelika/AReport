<Window x:Class="MYDIPLOMA.Dialog.FunctionWindowd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MYDIPLOMA.Dialog"
        mc:Ignorable="d"
        Title="FunctionWindowd" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <WrapPanel Margin="0,20" HorizontalAlignment="Center">
                <ComboBox Name="Parameter1"></ComboBox>
                <ComboBox SelectedIndex="0" Name="Operator" >
                    <ComboBoxItem Content="+" ></ComboBoxItem>
                    <ComboBoxItem Content="-" ></ComboBoxItem>
                    <ComboBoxItem Content="*" ></ComboBoxItem>
                    <ComboBoxItem Content="/" ></ComboBoxItem>
                </ComboBox>
                <ComboBox Name="Parameter2"></ComboBox>
            </WrapPanel>

            <Button Name="Ok" Click="Ok_Click" Width="100">Ok </Button>
        </StackPanel>
    </Grid>
</Window>
