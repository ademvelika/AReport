                                <Label FontSize="15">Font Size</Label>

                                <ComboBox FontSize="15" Height="30" MinWidth="35" Background="White"  VerticalContentAlignment="Center"  SelectionChanged="FontSize_SelectionChanged"  SelectedIndex="0" Name="FontSize">
