                        <RibbonButton  Click="PreViewButton_Click" LargeImageSource="/Images/preview.png" Label="Preview"  ></RibbonButton>

                    </RibbonGroup>
                    <!-- Employee And Payroll group-->
                    <RibbonGroup x:Name="Employee" Header="Property">

                        <RibbonControl>
